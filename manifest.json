{
  "manifest_version": 3,
  "name": "Intra Enhaced [1337] (beta)",
  "version": "1.0",
  "description": "Enhance your Intra platform experience ",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    }
  },
  "permissions": ["tabs", "scripting", "identity", "storage"],

  "host_permissions": ["https://api.intra.42.fr/*", "https://*.intra.42.fr/*"],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "background": {
    "service_worker": "worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://profile-v3.intra.42.fr/*"],
      "css": ["content.css"],
      "js": [
        "content.js",
        "utils.js",
        "auth.js",
        "addRankBadge.js",
        "fetchUserData.js",
        "tailwind.js",
        "main.js",
        "getAllUsers.js",
        "ranking.js",
        "sticky-note.js",
        "pomodoro.js",
        "quran.js",
        "quran-widget.js",
        "preference.js",
        "all-quran.js"
      ],
      "run_at": "document_start",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["alert.mp3", "loading.gif"],
      "matches": ["https://*.intra.42.fr/*"]
    }
  ]
}
